{
    "name" : "bernard/bernard-bundle",
    "description" : "Integrates Bernard into a Symfony2 application.",
    "type" : "symfony-bundle",
    "license" : "MIT",

    "autoload" : {
        "psr-4" : { "Bernard\\BernardBundle\\" : "" }
    },

    "require" : {
        "bernard/bernard" : "dev-doctrineDriverFix",
        "symfony/framework-bundle" : "~2.1"
    },

    "require-dev" : {
        "symfony/console" : "~2.1",
        "symfony/finder" : "~2.1",
	    "phpunit/phpunit": "~4.0"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    },
    
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/adamchrabaszcz/bernard.git"
        }
    ]
}
